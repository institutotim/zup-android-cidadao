<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#7f7f7f"/>
            <stroke
                android:width="0dp" />
            <corners
                android:radius="5dp"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#000" />
            <stroke
                android:width="0dp" />
            <corners
                android:radius="5dp"/>
            <padding 
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</selector>